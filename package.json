{
  "name": "task-activity-planner-back-end",
  "version": "1.0.0",
  "description": "The Back End of Task Activity Planner build with Node.js Express framework",
  "author": "Mantas Astrauskas",
  "main": "server.js",
  "scripts": {
    "client-install": "yarn --cwd client",
    "start": "node src/server.js",
    "server": "nodemon src/server.js",
    "client": "yarn --cwd client start",
    "dev": "concurrently -r \"yarn run server\" \"yarn run client\"",
    "test": "_mocha src/**/*.spec.js",
    "test-client": "cd client && yarn test",
    "test-coverage": "istanbul cover _mocha src/**/*.spec.js",
    "heroku-postbuild": "cd client && yarn && yarn build",
    "client-dependencies": "cd client && yarn",
    "collect-coverage": "cd client && yarn global add codecov && yarn test-coverage && codecov"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "auth0": "^2.24.0",
    "auth0-js": "^9.12.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^2.3.1",
    "istanbul": "^0.4.5",
    "jest": "^24.9.0",
    "jwks-rsa": "^1.7.0",
    "method-override": "^3.0.0",
    "mocha": "^7.0.1",
    "mongoose": "^5.7.5",
    "moxios": "^0.4.0",
    "superagent": "^5.2.1",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@shelf/jest-mongodb": "^1.1.3",
    "babel-cli": "^6.26.0",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.6.5",
    "mongodb-memory-server": "^6.2.4",
    "nodemon": "^1.19.4",
    "sinon": "^8.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
