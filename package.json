{
  "name": "task-activity-planner-back-end",
  "version": "1.0.0",
  "description": "The Back End of Task Activity Planner build with Node.js Express framework",
  "author": "Mantas Astrauskas",
  "main": "server.js",
  "scripts": {
    "build": "babel index.js --out-file index-compiled.js",
    "client-install": "yarn --cwd client",
    "start": "node src/server.js",
    "server": "nodemon --exec babel-node src/server.js",
    "client": "yarn --cwd client start",
    "dev": "concurrently -r \"yarn run server\" \"yarn run client\"",
    "test-server": "jest --watchAll=true",
    "test-coverage": "jest --collectCoverage --watchAll=false",
    "test-client": "cd client && yarn test",
    "test-client-coverage": "cd client && yarn test-coverage",
    "test-full": "yarn test-server && yarn test-client-coverage",
    "heroku-postbuild": "cd client && yarn && yarn build",
    "client-dependencies": "cd client && yarn"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "auth0": "^2.24.0",
    "auth0-js": "^9.12.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "core-js": "^3.6.4",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^2.3.1",
    "istanbul": "^0.4.5",
    "jest": "^24.9.0",
    "jwks-rsa": "^1.7.0",
    "method-override": "^3.0.0",
    "mocha": "^7.0.1",
    "mongoose": "^5.7.5",
    "moxios": "^0.4.0",
    "regenerator-runtime": "^0.13.5",
    "superagent": "^5.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.7.1",
    "@shelf/jest-mongodb": "^1.1.3",
    "babel-jest": "^24.9.0",
    "codecov": "^3.6.5",
    "mock-jwks": "^0.3.0",
    "mongodb-memory-server": "^6.2.4",
    "nock": "^12.0.3",
    "nodemon": "^1.19.4",
    "sinon": "^8.1.1",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "client/src"
    ]
  }
}
